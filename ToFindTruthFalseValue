//JavaScript to finding the truth and false value of a number
var a={};
var b=0;
if(a)
{
  	console.log('The value is True' );
}
else
{
   	console.log('The value is False');
}
if(b)
{
  	console.log('The value is True' );
}
else
{
   	console.log('The value is False');
}

//True: all numbers, non empty strings and true
//False: undefined,0,NaN,false," ",' ',null

Output:
The value is True
The value is False
