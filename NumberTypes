//JS for Number Types
console.log('----------');
console.log(Number.isFinite(Infinity));
console.log(Number.isFinite(100));
console.log(Number.isFinite(NaN));

console.log('----------');
console.log(Number.isInteger(1.5));
console.log(Number.isInteger(10));
console.log(Number.isInteger(100.00));

console.log('----------');
console.log(Number.isNaN(NaN));
console.log(Number.isNaN('sai'));
console.log(Number.isNaN(10));

console.log('----------');
console.log(Number.isSafeInteger('sai'));
console.log(Number.isSafeInteger(10));
console.log(Number.isSafeInteger(100.00));//If the value is more than max integer value, then it returns false.

console.log('----------');
var a=77.1234
console.log(a.toExponential());
console.log(a.toExponential(2));
console.log(a.toExponential(5));
console.log(a.toExponential(10));

console.log('----------');
var a=77.1234;
console.log(a.toFixed());
console.log(a.toFixed(2));
console.log(a.toFixed(5));
console.log(a.toFixed(10));

console.log('----------');
var a=77.12345678900;
console.log(a.toPrecision());
console.log(a.toPrecision(2));
console.log(a.toPrecision(5));
console.log(a.toPrecision(10));

console.log('----------');
var a=255;
console.log(a.toString(2));
console.log(a.toString(8));
console.log(a.toString(10));
console.log(a.toString(16));

