  //JS for Current Date
  
  var current_date=new Date();
  var day=current_date.getDay();
  var mon=current_date.getMonth()+1;
  var year=current_date.getFullYear();
  current_date="${day}-${mon}-${year}";
  console.log(current_date);
  current_date="${day}/${mon}/${year}";
  console.log(current_date);
  
